{% case variable_media.media_type %}
  {% when 'image' %}
    <img src="{{ variable_media.src |  image_url  }}" alt="{{ variable_media.alt }}" class="h-full w-full object-cover">

  {% when 'external_video' %}
    {{ variable_media | external_video_tag: class: 'h-full w-80 object-cover' }}

  {% when 'video' %}
    {{
      variable_media
      | video_tag: controls: false, autoplay: true, loop: true, muted: true, class: 'w-full h-full object-cover'
    }}

  {% when 'model' %}
    {{ variable_media | model_viewer_tag }}

  {% else %}
    {{ media | media_tag }}
{% endcase %}
